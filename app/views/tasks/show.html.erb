<div class="show">
  <h2><%= @tasks.title %></h2>
  <h2><%= @tasks.details %></h2>
  <h2><%= @tasks.completed %></h2>
</div>

<div class="flex-container">
  <h2><%= link_to "Back", tasks_path%></h2>
  <h2><%= link_to 'Edit', edit_task_path(@tasks) %></h2>
  <h2><%= link_to 'Delete', task_path(@tasks), method: :delete, data: {confirm: "Are you sure?"} %></h2>
</div>
